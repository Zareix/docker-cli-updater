{
  "name": "docker-cli-updater",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "list": "bun run src/index.ts list",
    "update-all": "bun run src/index.ts update",
    "test:standalone": "bun test standalone --preload ./tests/setup-standalone.ts",
    "test:swarm": "bun test swarm --preload ./tests/setup-swarm.ts",
    "test": "bun run test:standalone && docker swarm init && bun run test:swarm && docker swarm leave --force",
    "check": "bunx @biomejs/biome check --apply src/ && bun run test",
    "build:bun": "bun build --target=bun --outdir=./bin/bun src/index.ts",
    "build:node": "bun build --target=node --outdir=./bin/node src/index.ts",
    "build:compile": "bun build --compile --outfile=./bin/docker-cli-updater src/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.2",
    "@types/dockerode": "^3.3.23",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^11.1.0",
    "@inquirer/prompts": "^3.3.0",
    "chalk": "^5.3.0",
    "chalk-template": "^1.1.0",
    "commander": "^11.1.0",
    "dockerode": "^4.0.2",
    "ora": "^8.0.1"
  }
}